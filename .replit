modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["imagemagick", "chromium", "nss", "atk", "at-spi2-atk", "gtk3"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 24678
externalPort = 3000

[[ports]]
localPort = 34781
externalPort = 3003
exposeLocalhost = true

[[ports]]
localPort = 36393
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 37981
externalPort = 3002
exposeLocalhost = true

[workflows]
runButton = "Clean Start"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "concurrently \"npm run dev\" \"npx tsx worker/index.ts\" --names \"app,worker\" --prefix-colors \"blue,green\""
waitForPort = 5000

[[workflows.workflow]]
name = "Complete App with Worker"
author = 44193618
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run worker:dev"

[[workflows.workflow]]
name = "Debug App with Worker"
author = 44193618
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run worker:dev 2>&1 | tee worker.log"

[[workflows.workflow]]
name = "Worker Only Debug"
author = 44193618
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸš€ Starting worker in debug mode...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run worker:dev"

[[workflows.workflow]]
name = "Clean Start"
author = 44193618
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run worker:dev"
