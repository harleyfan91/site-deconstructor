{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "rootDir": "client/src",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "client/src/lib/**/*.ts",
    "client/src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "tests"
  ]
}
